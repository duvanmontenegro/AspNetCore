@Model Curso
@{
    ViewData["Title"] = "Crear Curso";
}

<div class="text-center">
    <form method="post">
        <div>
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" />
        </div>
        <div>
            <label asp-for="Dirección"></label>
            <input asp-for="Dirección" />
        </div>
        <div>
            <label asp-for="Jornada"></label>
            <input asp-for="Jornada" />
        </div>
        <input type="submit" />
    </form>
</div>
